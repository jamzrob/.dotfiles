#!/bin/zsh

DIR=$HOME/.dotfiles

DOTFILES=(
    ".zshrc"
    ".tmux.conf"
    ".ssh/config"
    ".config/nvim"
    ".config/tmuxinator"
)

for dotfile in "${DOTFILES[@]}";do
        echo "Removing old ${dotfile}"

        if [-L "${HOME}/${dotfile}"]; then
            echo "Is a symlink"
        else
            echo "Not a symlink"
        fi

        # Remove if not symlink
        # Comment out next lines
        #
        # [ -L "${HOME}/${dotfile}" ] && rm -f "${HOME}/${dotfile}"

        # echo "Creating symlink for ${dotfile}"
        # ln -sfn "${DIR}/${dotfile}" "${HOME}/${dotfile}"
done
