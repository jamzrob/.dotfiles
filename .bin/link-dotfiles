#!/bin/zsh

DIR=$HOME/.dotfiles

NEW_CONFIGS = (
"tmux",
"nvim"
"tmuxinator",
"skhd"
"yabairc"
)

DOTFILES=(
    ".zshrc"
    ".config/tmux/.tmux.conf"
    ".config/nvim"
    ".config/tmuxinator"
    ".config/skhd"
    ".ssh/config"
    ".config/yabai/.yabairc"
)

for dotfile in "${DOTFILES[@]}";do
	echo ${dotfile}
	rm -rf "${HOME}/${dotfile}"
	ln -sf "${DIR}/${dotfile}" "${HOME}/${dotfile}"
done
