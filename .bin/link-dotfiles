#!/bin/zsh

DIR=$HOME/.dotfiles

NEW_CONFIGS = (
"tmux",
"yabairc"
)

DOTFILES=(
    ".zshrc"
    ".config/tmux/.tmux.conf"
    ".config/nvim"
    ".config/tmuxinator"
    ".config/skhd"
    ".ssh/config"
    ".config/yabai/.yabairc"
)

for c in "${NEW_CONFIGS[@]}";do
	rm -rf "${HOME}/.config/${c}"
	mkdir "${HOME}/.config/${c}}"
done

for dotfile in "${DOTFILES[@]}";do
	echo ${dotfile}
	rm -rf "${HOME}${dotfile}"
	ln -sf "${DIR}/${dotfile}" "${HOME}/${dotfile}"
done
