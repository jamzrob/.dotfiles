#!/bin/zsh

DIR=$HOME/.dotfiles

NEW_CONFIGS = (
"tmux",
"yabairc"
)

DOTFILES=(
    ".zshrc"
    ".config/tmux/.tmux.conf"
    ".config/nvim"
    ".config/tmuxinator"
    ".config/skhd"
    ".ssh/config"
    ".config/yabai/.yabairc"
)

for c in "${NEW_CONFIGS[@]}";do
	rm -rf "$HOME/.config/${c}"
	mkdir "$HOME/.config/${c}}"
done

for dotfile in "${DOTFILES[@]}";do
	ln -sfn "${DIR}/${dotfile}" "${HOME}/${dotfile}"
done
